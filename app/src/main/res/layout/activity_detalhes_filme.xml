<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.activity.DetalhesFilmeActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_detalhes_imagem_do_filme"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:flow_verticalBias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_nome_do_filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Nome do filme"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="#FFAC1616"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_imagem_do_filme"/>

        <TextView
            android:id="@+id/activity_detalhes_sinopse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sinopse:"
            tools:text="Sinopse"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_detalhes_nome_do_filme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_data_lancamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data de Lançamento:"
            tools:text="Data de lancamento"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_sinopse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_titulo_original"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Titulo Original:"
            tools:text="Titulo Original"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_data_lancamento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_lingua_original"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lingua Original:"
            tools:text="Lingua Original"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_titulo_original"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_popularidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Popularidade:"
            tools:text="Popularidade"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_lingua_original"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_media_de_votos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Média da Votação:"
            tools:text="Média da Votação"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_popularidade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/activity_detalhes_quantidade_de_votos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantidade de Votos:"
            tools:text="Quantidade de Votos"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detalhes_media_de_votos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>