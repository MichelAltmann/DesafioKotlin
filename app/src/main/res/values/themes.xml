<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryVariant">#232323</item>
        <item name="colorOnPrimary">#191919</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffffff</item>
        <item name="colorSecondaryVariant">#191919</item>
        <item name="colorOnSecondary">#191919</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">16sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">#99ffffff</item>
        <!-- Icon Color -->
        <item name="android:tint">#99ffffff</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">#ffee00</item>
        <item name="colorControlActivated">#ffee00</item>
    </style>
    <style name="Theme.DesafioKotlin.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DesafioKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DesafioKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>